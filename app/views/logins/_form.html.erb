<%= form_for(@login) do |f| %>
  <% if @login.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@login.errors.count, "error") %> prohibited this login from being saved:</h2>

      <ul>
      <% @login.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<main>
  <div class="container">
    <div class="alert alert-warning text-center">Para poder publicar un estacionamiento necesitas ingresar con una cuenta Flash Web Systems</div>
      <section class="signup">
        <h2>Estás creando una cuenta, solo tardarás unos segundos</h2>
          <div class="panel panel-default panel-calltoaction">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-6">
                  <form method="post" action="https://www.joldit.com/signup?ref=publish">
                    <div class="form-group">
                      <div class="row">
                        <div class="col-md-12">
                          <%= f.label :name %><br>
                          </div>
                          <div class="col-md-6">
                            <%= f.text_field :name %>
                          </div>
                          <div class="col-md-6">
                            <%= f.text_field :lastname %>
                          </div>
                        </div>
                        <div class="form-group">
                          <%= f.label :correo %><br>
                          <%= f.text_field :correo %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password %><br>
                          <%= f.text_field :password %>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                  <%= f.label :sexo %><br>
                                  <%= f.text_field :sexo %>
                                </div>
                            </div>
                        </div>
                      <p><button class="btn btn-primary btn-lg" type="submit"><%= f.submit %></p>
                    </form>
                  </div>
                </div>
              </div>
            </div>
        </section>
    </div>

    </main>
<% end %>
